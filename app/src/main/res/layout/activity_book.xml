<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aquamarine"
    android:orientation="vertical"
    tools:context=".ui.BookActivity"
    tools:ignore="HardCodedText">

    <include
        android:id="@+id/ferry"
        layout="@layout/ferry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/refresh"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/dark_blue"
            android:text="REFRESH AVAILABILITIES"
            android:fontFamily="@font/roboto_condensed_bold"
            app:icon="@drawable/ic_baseline_refresh_24"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/scan"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/dark_blue"
            android:text="SCAN TO BOOK TICKET"
            android:fontFamily="@font/roboto_condensed_bold"
            app:icon="@drawable/ic_baseline_document_scanner_24"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_passenger_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_24"
                    android:contentDescription="add_passenger_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD PASSENGER"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/roboto_condensed_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_vehicles_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp">


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_goods_card"
            android:layout_width="100dp"
            android:layout_marginStart="20dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp">


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>